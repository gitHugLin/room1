<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#040404"
    tools:context=".MainActivity">

    <com.example.linqi.mfdnoisy.SquareCameraPreview
        android:id="@+id/surfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button_take_picture" />

    <ImageView
        android:id="@+id/iamgeView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#030303"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/surfaceView">

    </ImageView>

    <com.example.linqi.mfdnoisy.NumberProgressBar
        android:id="@+id/numberbar"
        android:layout_height="15dp"
        android:padding="20dp"
        android:layout_width="100dp"
        style="@style/NumberProgressBar_Funny_Orange"
        android:layout_alignTop="@+id/iamgeView"
        android:layout_toEndOf="@+id/surfaceView"
        android:layout_marginTop="39dp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/button_take_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Capture"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/btn_shutter_background" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/surfaceView"
        android:textColor="#ffffff" />


</RelativeLayout>
